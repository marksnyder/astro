{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "IRC Agent",
            "type": "shell",
            "command": "python",
            "args": [
                "-m", "tools.irc_agent",
                "--host", "${input:ircHost}",
                "--port", "${input:ircPort}",
                "--channel", "'${input:ircChannel}'"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Package Chrome Extension",
            "type": "shell",
            "command": "mkdir -p dist && cd extension && zip -r ../dist/astro-browse-extension.zip . -x '.*'",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "Docs Site (Jekyll serve)",
            "type": "shell",
            "command": "bundle exec jekyll serve --baseurl '' --livereload --open-url",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/docs",
                "env": {
                    "PATH": "${env:HOME}/.local/share/gem/ruby/3.3.0/bin:${env:PATH}"
                }
            },
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "clear": true
            }
        }
    ],
    "inputs": [
        {
            "id": "ircHost",
            "type": "promptString",
            "description": "IRC server hostname",
            "default": "localhost"
        },
        {
            "id": "ircPort",
            "type": "promptString",
            "description": "IRC server port",
            "default": "6667"
        },
        {
            "id": "ircChannel",
            "type": "promptString",
            "description": "IRC channel to join",
            "default": "#astro"
        }
    ]
}
